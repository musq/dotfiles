# wget configuration options
# https://www.gnu.org/software/wget/manual/html_node/Wgetrc-Commands.html

# NOTE: We must set $WGETRC="~/.config/.wgetrc" to use this file
# https://www.gnu.org/software/wget/manual/html_node/Wgetrc-Location.html

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Set all applicable timeouts (in seconds)
# dns_timeout, connect_timeout, read_timeout

timeout = 60

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Reduce the number of retries per URL from 20 to 5

tries = 5

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Send a fake UA string for the HTTP servers that sniff it

user-agent = "Mozilla/5.0 Gecko"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Wait randomly between 2-6 seconds between requests

wait = 4
random_wait = on
