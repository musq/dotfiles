# Modeline hint for vim to improve syntax highlighting of this file
# vim: syntax=wget

# cURL configuration options
# https://curl.haxx.se/docs/manpage.html

# NOTE: We must set $XDG_CONFIG_HOME="$HOME/.config" to use this file
# https://everything.curl.dev/cmdline/configfile.html#default-config-file

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Limit the time (in seconds) the connection is allowed to take

connect-timeout = 60

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Follow HTTP redirects

location

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Display progress as a simple progress bar

progress-bar

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Show error messages

show-error

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Send a fake UA string for the HTTP servers that sniff it

user-agent = "Mozilla/5.0 Gecko"
